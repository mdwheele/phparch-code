<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Workflow Simulation Viewer</title>

    <!-- Styles -->
    <link href="/css/app.css" rel="stylesheet">
</head>
<body>
    <div class="container" v-cloak>
        <div class="sidebar">
            <h3>Triggered Automatically</h3>
            <ul>
                <li><a href="{{ url('workflow.basic') }}">Basic</a></li>
            </ul>

            <h3>Triggered by User Input</h3>
            <ul>
                <li><a href="{{ url('workflow.user.basic') }}">Basic</a></li>
                <li><a href="{{ url('workflow.user.complex') }}">Complex</a></li>
            </ul>

            <h3>Vue.js</h3>
            <ul>
                <li><a href="{{ url('vuejs') }}">Open</a></li>
            </ul>
        </div>
        <div class="content">
            {% block content %}{% endblock %}
        </div>
    </div>

    <!-- Scripts -->
    <script src="/js/app.js"></script>
</body>
</html>